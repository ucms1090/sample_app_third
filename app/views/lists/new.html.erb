<div>
    <h1>新規投稿</h1>
    <% if @list.errors.any? %>
      <%= @list.errors.count %>件のエラーが発生しました
      <ul>
        <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    
  <%= form_with model: @list do |f| %>
    <h4>title</h4>
    <%= f.text_area :title %>
    <h3>body</h3>
    <%= f.text_area :body %>
    <h2>画像とか</h2>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.submit %>
  <% end %>
</div>

